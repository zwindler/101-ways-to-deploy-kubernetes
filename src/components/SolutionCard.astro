---
// SolutionCard.astro - A reusable component to display Kubernetes deployment solutions

interface Props {
  solution: {
    name: string;
    category: string;
    url: string;
    icon_url?: string;
    icon_background_color?: 'light' | 'dark';
    publisher?: string;
    description?: string;
    license?: string;
    open_source?: boolean;
    based_on?: string[];
    tags?: string[];
    cloud_providers?: string[];
    abandoned?: boolean;
    production_ready?: boolean;
    stars?: number;
    references?: {
      title: string;
      description?: string;
      language: string;
      url: string;
      type: string;
    }[];
  };
}

const { solution } = Astro.props;

// Helper function - Convert language code to flag emoji
const languageToFlag = (langCode: string): string => {
  const languageToCountry: Record<string, string> = {
    'en': 'gb', // English -> UK flag
    'fr': 'fr', // French -> France
    'de': 'de', // German -> Germany
    'es': 'es', // Spanish -> Spain
    'zh': 'cn', // Chinese -> China
    'ja': 'jp', // Japanese -> Japan
    'pt': 'pt', // Portuguese -> Portugal
    'ko': 'kr', // Korean -> South Korea
    'it': 'it', // Italian -> Italy
    'ru': 'ru', // Russian -> Russia
    'nl': 'nl', // Dutch -> Netherlands
    'pl': 'pl', // Polish -> Poland
    'tr': 'tr', // Turkish -> Turkey
    'ar': 'sa', // Arabic -> Saudi Arabia
    'hi': 'in', // Hindi -> India
  };

  const lowerLangCode = langCode.toLowerCase();
  const countryCode = languageToCountry[lowerLangCode];
  
  // Return original language code if not mapped
  if (!countryCode) {
    return langCode;
  }
  
  const upperCountryCode = countryCode.toUpperCase();
  
  // Validate country code is exactly 2 characters and contains only A-Z
  if (upperCountryCode.length !== 2 || !/^[A-Z]{2}$/.test(upperCountryCode)) {
    return langCode;
  }
  
  // Convert country code to flag emoji using regional indicator symbols
  // Unicode Regional Indicator Symbol Letter A starts at U+1F1E6
  const REGIONAL_INDICATOR_A = 0x1F1E6;
  const codePoints = [...upperCountryCode].map(char => 
    REGIONAL_INDICATOR_A + char.charCodeAt(0) - 'A'.charCodeAt(0)
  );
  
  return String.fromCodePoint(...codePoints);
};

// Helper function - Convert language code to full language name
const languageToName = (langCode: string): string => {
  const languageNames: Record<string, string> = {
    'en': 'English',
    'fr': 'French',
    'de': 'German',
    'es': 'Spanish',
    'zh': 'Chinese',
    'ja': 'Japanese',
    'pt': 'Portuguese',
    'ko': 'Korean',
    'it': 'Italian',
    'ru': 'Russian',
    'nl': 'Dutch',
    'pl': 'Polish',
    'tr': 'Turkish',
    'ar': 'Arabic',
    'hi': 'Hindi',
  };
  
  return languageNames[langCode.toLowerCase()] || langCode;
};

// Helper variables - Abandoned badge styling
const abandonedBadgeStyle = "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300";

// Helper function - Get icon background classes based on icon_background_color
const getIconBackgroundClasses = (iconBackgroundColor?: 'light' | 'dark') => {
  if (iconBackgroundColor === 'light') {
    // Force light background in both themes (for dark logos)
    return '!bg-white';
  } else if (iconBackgroundColor === 'dark') {
    // Force dark background in both themes (for light logos)
    return '!bg-gray-700';
  }
  // Default: follow theme
  return 'bg-white dark:bg-gray-700';
};

// Helper function - Convert license name to TLDR Legal URL
const licenseToTLDRUrl = (license: string): string | null => {
  const licenseMap: Record<string, string> = {
    'Apache 2.0': 'https://www.tldrlegal.com/license/apache-license-2-0-apache-2-0',
    'MIT': 'https://www.tldrlegal.com/license/mit-license',
    'MPL 2.0': 'https://www.tldrlegal.com/license/mozilla-public-license-2-0-mpl-2',
    'AGPL 3.0': 'https://www.tldrlegal.com/license/gnu-affero-general-public-license-v3-agpl-3-0',
    'BSD 3-Clause': 'https://www.tldrlegal.com/license/bsd-3-clause-license-revised',
    'BUSL 1.1': 'https://www.tldrlegal.com/license/business-source-license-1-1-busl-1-1',
    'Zlib': 'https://www.tldrlegal.com/license/zlib-libpng-license-zlib',
  };
  
  return licenseMap[license] || null;
};

const iconBgClasses = getIconBackgroundClasses(solution.icon_background_color);
const tldrLegalUrl = solution.license ? licenseToTLDRUrl(solution.license) : null;

// Helper function - Format star count in compact format
const formatStars = (stars: number): string => {
  if (stars >= 1000000) {
    const formatted = (stars / 1000000).toFixed(1);
    return formatted.endsWith('.0') ? formatted.slice(0, -2) + 'M' : formatted + 'M';
  } else if (stars >= 1000) {
    const formatted = (stars / 1000).toFixed(1);
    return formatted.endsWith('.0') ? formatted.slice(0, -2) + 'k' : formatted + 'k';
  }
  return stars.toString();
};

const isGitHub = solution.url.includes("github.com");
const referencesCount = solution.references?.length || 0;

// Get first letter for logo placeholder
const firstLetter = solution.name.charAt(0).toUpperCase();

// Limit visible tags to 4
const visibleTags = solution.tags?.slice(0, 4) || [];
const remainingTags = (solution.tags?.length || 0) - visibleTags.length;

// Generate unique ID for this card (using URL to ensure uniqueness)
const cardId = `card-${solution.url.replace(/[^a-zA-Z0-9]/g, '-').toLowerCase()}`;
---

<div
  class="solution-card-wrapper hover-lift bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300 overflow-hidden flex flex-col h-full cursor-pointer"
  data-card-id={cardId}
>
  <!-- Header Section -->
  <div class="p-6 flex items-start gap-4 relative">
    <!-- Logo Placeholder -->
    {solution.icon_url ? (
      <div 
        class={`w-20 h-20 rounded-lg flex items-center justify-center flex-shrink-0 ${iconBgClasses}`}
        data-fallback-letter={firstLetter}
      >
        <img 
          src={solution.icon_url} 
          alt={`${solution.name} logo`}
          class="w-full h-full object-contain"
          loading="lazy"
          referrerpolicy="no-referrer"
          onerror={`this.style.display='none'; const container = this.parentElement; container.classList.remove('bg-white', 'dark:bg-gray-700'); container.classList.add('bg-gradient-to-br', 'from-blue-500', 'to-blue-600', 'dark:from-blue-600', 'dark:to-blue-700'); const span = document.createElement('span'); span.className = 'text-white font-bold text-3xl'; span.textContent = container.getAttribute('data-fallback-letter'); container.appendChild(span);`}
        />
      </div>
    ) : (
      <div
        class="w-20 h-20 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 flex items-center justify-center text-white font-bold text-3xl flex-shrink-0"
      >
        {firstLetter}
      </div>
    )}

    <!-- Name and Publisher -->
    <div class="flex-1 min-w-0">
      <h3
        class="text-xl font-bold text-gray-900 dark:text-white line-clamp-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        {solution.name}
      </h3>
      <div class="min-h-[1.25rem]">
        {
          solution.publisher && (
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              {solution.publisher}
            </p>
          )
        }
      </div>
    </div>

    <!-- Badges Container (right side) -->
    <div class="flex-shrink-0 flex flex-col items-end gap-2">
      <!-- Abandoned Badge (only if abandoned) -->
      {
        solution.abandoned && (
          <div
            class={`px-3 py-1 rounded-full text-xs font-medium ${abandonedBadgeStyle}`}
          >
            Abandoned
          </div>
        )
      }

      <!-- Open Source Badge -->
      {
        solution.open_source && (
          <div class="bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 px-3 py-1 rounded-full text-xs font-medium flex items-center gap-1">
            <svg
              class="w-3 h-3"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
            OSS
          </div>
        )
      }

      <!-- Production Ready Badge -->
      {
        solution.production_ready && (
          <div class="bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 px-3 py-1 rounded-full text-xs font-medium flex items-center gap-1">
            <svg
              class="w-3 h-3"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
            Prod Ready
          </div>
        )
      }
    </div>
  </div>

  <!-- Description Section: min-h-[3rem] reserves space for up to 2 lines of text -->
  <div class="px-6 pb-4 min-h-[3rem] detailed-section">
    {
      solution.description && (
        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2">
          {solution.description}
        </p>
      )
    }
  </div>

  <!-- Based On Section: min-h-[3.5rem] accommodates label + badge row -->
  <div class="px-6 pb-4 min-h-[3.5rem] detailed-section">
    {
      solution.based_on && solution.based_on.length > 0 && (
        <>
          <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Based on:</p>
          <div class="flex flex-wrap gap-2">
            {solution.based_on.map((tech) => (
              <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full text-xs font-medium">
                {tech}
              </span>
            ))}
          </div>
        </>
      )
    }
  </div>

  <!-- Tags Section: min-h-[3rem] ensures uniform spacing for tag badges -->
  <div class="px-6 pb-4 min-h-[3rem] detailed-section">
    {
      solution.tags && solution.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {visibleTags.map((tag) => (
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
              {tag}
            </span>
          ))}
          {remainingTags > 0 && (
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
              +{remainingTags}
            </span>
          )}
        </div>
      )
    }
  </div>

  <!-- Spacer to push footer to bottom -->
  <div class="flex-grow"></div>

  <!-- Footer -->
  <div
    class="mt-auto bg-gray-50 dark:bg-gray-900/50 border-t border-gray-200 dark:border-gray-700 px-6 py-4"
  >
    <div class="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400 gap-4">
      <!-- License -->
      {
        solution.license && (
          <div class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            {tldrLegalUrl ? (
              <a
                href={tldrLegalUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="truncate hover:text-blue-600 dark:hover:text-blue-400 transition-colors underline decoration-dotted underline-offset-2"
                onclick="event.stopPropagation();"
              >
                {solution.license}
              </a>
            ) : (
              <span class="truncate">{solution.license}</span>
            )}
          </div>
        )
      }

      <!-- References Count -->
      {
        referencesCount > 0 && (
          <div class="flex items-center gap-2 cursor-pointer hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
            <svg
              class="w-4 h-4 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              aria-label={`${referencesCount} reference${referencesCount === 1 ? '' : 's'}`}
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              />
            </svg>
            <span class="font-medium hidden lg:inline">{referencesCount} refs</span>
          </div>
        )
      }

      <!-- Stars Count -->
      {
        solution.stars && (
          <div class="flex items-center gap-1.5 text-yellow-600 dark:text-yellow-400" title={`${solution.stars.toLocaleString()} stars`}>
            <svg
              class="w-4 h-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              />
            </svg>
            <span class="font-medium">{formatStars(solution.stars)}</span>
          </div>
        )
      }

      <!-- Link to Solution -->
      <a
        href={solution.url}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-press flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors ml-auto"
      >
        {
          isGitHub ? (
            <>
              <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              GitHub
            </>
          ) : (
            <>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
              Link
            </>
          )
        }
      </a>
    </div>
  </div>
</div>

<!-- Modal for expanded card view -->
<div 
  id={`modal-${cardId}`}
  class="modal-overlay fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center p-4"
  style="backdrop-filter: blur(8px); z-index: 9999;"
  role="dialog"
  aria-modal="true"
  aria-labelledby={`modal-title-${cardId}`}
>
  <div class="modal-content bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-4xl w-full max-h-[85vh] overflow-y-auto transform transition-all duration-300 scale-95 opacity-0">
    <!-- Modal Header -->
    <div class="sticky top-0 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 p-6 flex items-start justify-between z-10">
      <div class="flex items-start gap-4 flex-1 min-w-0">
        <!-- Logo -->
        {solution.icon_url ? (
          <div 
            class={`w-32 h-32 rounded-lg flex items-center justify-center flex-shrink-0 ${iconBgClasses}`}
            data-fallback-letter={firstLetter}
          >
            <img 
              src={solution.icon_url} 
              alt={`${solution.name} logo`}
              class="w-full h-full object-contain"
              loading="lazy"
              referrerpolicy="no-referrer"
              onerror={`this.style.display='none'; const container = this.parentElement; container.classList.remove('bg-white', 'dark:bg-gray-700'); container.classList.add('bg-gradient-to-br', 'from-blue-500', 'to-blue-600', 'dark:from-blue-600', 'dark:to-blue-700'); const span = document.createElement('span'); span.className = 'text-white font-bold text-5xl'; span.textContent = container.getAttribute('data-fallback-letter'); container.appendChild(span);`}
            />
          </div>
        ) : (
          <div
            class="w-32 h-32 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 flex items-center justify-center text-white font-bold text-5xl flex-shrink-0"
          >
            {firstLetter}
          </div>
        )}
        
        <!-- Name and Category -->
        <div class="flex-1 min-w-0">
          <h2 id={`modal-title-${cardId}`} class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            {solution.name}
          </h2>
          {solution.publisher && (
            <p class="text-gray-600 dark:text-gray-400 mb-2">
              {solution.publisher}
            </p>
          )}
          <span class="inline-block px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full text-sm font-medium">
            {solution.category}
          </span>
        </div>
      </div>
      
      <!-- Close Button -->
      <button 
        class="modal-close flex-shrink-0 ml-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
        aria-label="Close modal"
        type="button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="p-6 space-y-6">
      <!-- Abandoned Badge -->
      {solution.abandoned && (
        <div class={`inline-block px-4 py-2 rounded-lg text-sm font-medium ${abandonedBadgeStyle}`}>
          Status: Abandoned
        </div>
      )}

      <!-- Description -->
      {solution.description && (
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Description</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            {solution.description}
          </p>
        </div>
      )}

      <!-- Based On and Tags (Combined on Same Line) -->
      {(solution.tags && solution.tags.length > 0) || (solution.based_on && solution.based_on.length > 0) ? (
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
          <!-- Based On (Left Side) -->
          {solution.based_on && solution.based_on.length > 0 && (
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Based On</h3>
              <div class="flex flex-wrap gap-2">
                {solution.based_on.map((tech) => (
                  <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full text-sm font-medium">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )}

          <!-- Tags (Right Side) -->
          {solution.tags && solution.tags.length > 0 && (
            <div class="flex-1 min-w-0 md:text-right">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Tags</h3>
              <div class="flex flex-wrap gap-2 md:justify-end">
                {solution.tags.map((tag) => (
                  <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      ) : null}

      <!-- Cloud Providers -->
      {solution.cloud_providers && solution.cloud_providers.length > 0 && (
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Cloud Providers</h3>
          <div class="flex flex-wrap gap-2">
            {solution.cloud_providers.map((provider) => (
              <span class="px-3 py-2 bg-cyan-100 dark:bg-cyan-900/30 text-cyan-800 dark:text-cyan-300 rounded-lg text-sm font-medium">
                {provider}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- References -->
      {solution.references && solution.references.length > 0 && (
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
            References ({solution.references.length})
          </h3>
          <div class="space-y-3">
            {solution.references.map((ref) => (
              <a 
                href={ref.url}
                target="_blank"
                rel="noopener noreferrer"
                class="block p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors border border-gray-200 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400"
              >
                <div class="flex items-start justify-between gap-3">
