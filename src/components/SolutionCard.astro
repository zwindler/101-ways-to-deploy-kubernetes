---
// SolutionCard.astro - A reusable component to display Kubernetes deployment solutions

interface Props {
  solution: {
    name: string;
    category: string;
    url: string;
    publisher?: string;
    description?: string;
    license?: string;
    open_source?: boolean;
    based_on?: string[];
    tags?: string[];
    cloud_providers?: string[];
    status?: "active" | "deprecated" | "abandoned";
    references?: {
      title: string;
      description?: string;
      language: string;
      url: string;
      type: string;
    }[];
  };
}

const { solution } = Astro.props;

// Helper variables
const statusColors = {
  deprecated: "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300",
  abandoned: "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300",
};

const isGitHub = solution.url.includes("github.com");
const referencesCount = solution.references?.length || 0;

// Get first letter for logo placeholder
const firstLetter = solution.name.charAt(0).toUpperCase();

// Limit visible tags to 4
const visibleTags = solution.tags?.slice(0, 4) || [];
const remainingTags = (solution.tags?.length || 0) - visibleTags.length;
---

<div
  class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300 overflow-hidden flex flex-col h-full"
>
  <!-- Header Section -->
  <div class="p-6 flex items-start gap-4 relative">
    <!-- Status Badge (top right corner, only if not active) -->
    {
      solution.status && solution.status !== "active" && (
        <div
          class={`absolute top-2 right-2 px-3 py-1 rounded-full text-xs font-medium ${statusColors[solution.status]}`}
        >
          {solution.status.charAt(0).toUpperCase() + solution.status.slice(1)}
        </div>
      )
    }

    <!-- Logo Placeholder -->
    <div
      class="w-16 h-16 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 flex items-center justify-center text-white font-bold text-2xl flex-shrink-0"
    >
      {firstLetter}
    </div>

    <!-- Name and Publisher -->
    <div class="flex-1 min-w-0">
      <h3
        class="text-xl font-bold text-gray-900 dark:text-white truncate hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        {solution.name}
      </h3>
      {
        solution.publisher && (
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {solution.publisher}
          </p>
        )
      }
    </div>

    <!-- Open Source Badge -->
    {
      solution.open_source && (
        <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 px-3 py-1 rounded-full text-xs font-medium flex items-center gap-1">
          <svg
            class="w-3 h-3"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
          OSS
        </div>
      )
    }
  </div>

  <!-- Description Section -->
  {
    solution.description && (
      <div class="px-6 pb-4">
        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2">
          {solution.description}
        </p>
      </div>
    )
  }

  <!-- Based On Section -->
  {
    solution.based_on && solution.based_on.length > 0 && (
      <div class="px-6 pb-4">
        <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Based on:</p>
        <div class="flex flex-wrap gap-2">
          {solution.based_on.map((tech) => (
            <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full text-xs font-medium">
              {tech}
            </span>
          ))}
        </div>
      </div>
    )
  }

  <!-- Tags Section -->
  {
    solution.tags && solution.tags.length > 0 && (
      <div class="px-6 pb-4">
        <div class="flex flex-wrap gap-2">
          {visibleTags.map((tag) => (
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
              {tag}
            </span>
          ))}
          {remainingTags > 0 && (
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
              +{remainingTags}
            </span>
          )}
        </div>
      </div>
    )
  }

  <!-- Spacer to push footer to bottom -->
  <div class="flex-grow"></div>

  <!-- Footer -->
  <div
    class="mt-auto bg-gray-50 dark:bg-gray-900/50 border-t border-gray-200 dark:border-gray-700 px-6 py-4"
  >
    <div class="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400 gap-4">
      <!-- License -->
      {
        solution.license && (
          <div class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            <span class="truncate">{solution.license}</span>
          </div>
        )
      }

      <!-- References Count -->
      {
        referencesCount > 0 && (
          <div class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              />
            </svg>
            <span>{referencesCount} refs</span>
          </div>
        )
      }

      <!-- Link to Solution -->
      <a
        href={solution.url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors ml-auto"
      >
        {
          isGitHub ? (
            <>
              <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              GitHub
            </>
          ) : (
            <>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
              Link
            </>
          )
        }
      </a>
    </div>
  </div>
</div>

<style>
  /* Utility class for line clamping */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
