<script define:vars={{ cardId }}>
  // Wait for DOM to be ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModal);
  } else {
    initModal();
  }
  
  function initModal() {
    // Get elements
    const card = document.querySelector(`[data-card-id="${cardId}"]`);
    const modal = document.getElementById(`modal-${cardId}`);
    const modalContent = modal?.querySelector('.modal-content');
    const closeBtn = modal?.querySelector('.modal-close');
    
    // Store the element that opened the modal for focus restoration
    let triggerElement = null;
    
    // Store original body overflow
    let originalBodyOverflow = '';
    
    // Store original parent for cleanup
    let originalParent = null;

    // Open modal on card click
    card?.addEventListener('click', (e) => {
      // Don't open modal if clicking on the external link in footer
      const target = e.target;
      if (target && target.closest && target.closest('.btn-press')) {
        return;
      }
      
      if (modal && modalContent && closeBtn) {
        // Store trigger element for focus restoration
        triggerElement = card;
        
        // Store original overflow
        originalBodyOverflow = document.body.style.overflow;
        
        // Move modal to body to ensure it's not constrained by parent containers
        if (!originalParent) {
          originalParent = modal.parentElement;
        }
        document.body.appendChild(modal);
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
        
        // Trigger animation using requestAnimationFrame
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            modalContent.classList.remove('scale-95', 'opacity-0');
            modalContent.classList.add('scale-100', 'opacity-100');
          });
        });
        
        // Focus the close button for accessibility
        closeBtn.focus();
      }
    });

    // Close modal function
    const closeModal = () => {
      if (modal && modalContent) {
        modalContent.classList.remove('scale-100', 'opacity-100');
        modalContent.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          // Restore original overflow
          document.body.style.overflow = originalBodyOverflow;
          
          // Restore focus to trigger element
          if (triggerElement) {
            triggerElement.focus();
          }
        }, 300);
      }
    };

    // Close button - handle both click and keyboard
    closeBtn?.addEventListener('click', closeModal);
    closeBtn?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        closeModal();
      }
    });

    // Close on overlay click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close on escape key - only for this modal
    const handleEscape = (e) => {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        closeModal();
      }
    };
    
    document.addEventListener('keydown', handleEscape);
    
    // Cleanup: Remove event listener when component is removed
    // This prevents memory leaks in SPAs
    if (typeof window !== 'undefined' && window.addEventListener) {
      window.addEventListener('beforeunload', () => {
        document.removeEventListener('keydown', handleEscape);
      });
    }
  }
</script>

